{
  "compilerOptions": {
    "outDir": "./dist/",
    "incremental": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "lib": ["es5", "es6", "dom"],
    "types": ["node"],
    "moduleResolution": "node",
    "allowJs": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*"],
  "awesomeTypescriptLoaderOptions": {
    "reportFiles": ["./src/**/*"]
  }
}
